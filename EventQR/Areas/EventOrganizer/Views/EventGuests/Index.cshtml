@model IEnumerable<EventQR.Models.EventGuest>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_OrganizerLayout.cshtml";
    ViewBag.activeTabName = "thisEventGuests";

}@await Html.PartialAsync("_eventPartial")


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MyEvent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNo1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNo2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsInviteAccepted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InviteAcceptedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsInviteSent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InviteSentOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QrCodeImageUri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MyEvent.UniqueId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNo1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNo2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInviteAccepted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InviteAcceptedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInviteSent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InviteSentOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QrCodeImageUri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdatedDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UniqueId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UniqueId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UniqueId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
