 @model EventQR.Models.Event
@{
    Layout = "~/Views/Shared/_OrganizerLayout.cshtml";
    ViewBag.activeTabName = "thisEvent";

}
<div class="container">
    <div class="sidebar-left"></div>
    <div class="main-content">
        <div class="alert alert-danger" role="alert"> 
            <div class="row">
                <div class="col-sm-3">Event Name</div>
                <div class="col-sm-9">@Model.EvenOrganizer</div>
            </div>
        </div>
        <div class="alert alert-info" role="alert">
            <div class="row">
                <div class="col-sm-3">Description</div>
                <div class="col-sm-9">@Model.Description</div>
            </div>
        </div>
        <div class="alert alert-primary" role="alert">
            <div class="row">
                <div class="col-sm-3">Venue</div>
                <div class="col-sm-9">@Model.Venue</div>
            </div>
        </div>
    </div>
    </div>

