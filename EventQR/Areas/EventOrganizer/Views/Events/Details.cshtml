 @model EventQR.Models.Event
@{
    Layout = "~/Views/Shared/_OrganizerLayout.cshtml";
    ViewBag.activeTabName = "thisEvent";

} 
@await Html.PartialAsync("_eventPartial")
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <div class="content">
            <div class="card">
                <div class="card-header">
                    <h4 style="text-align:center"><b>Event Details</b></h4>
                    <div>
                       <hr />
                        <div class="row">
                            <div class="col-sm-1"></div>
                            <div class="col-sm-10">
                                <div class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.EvenOrganizer)
                                    </dt>

                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.EvenOrganizer.OrganizationName)
                                    </dd>
                                </div>

                                <div class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.Title)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Title)
                                    </dd>
                                </div>
                                <div class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.Description)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Description)
                                    </dd>
                                </div>
                                <div class="row">

                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.Venue)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.Venue)
                                    </dd>
                                </div>
                               <div class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.StartDate)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Model.CreatedDate.ToString("dd/MMM/yyyy h:mm tt")
                                    </dd>
                                </div>
                              <div class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.EndDate)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Model.CreatedDate.ToString("dd/MMM/yyyy h:mm tt")
                                    </dd>
                                </div>
                                <div class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.CreatedDate)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.CreatedDate)
                                    </dd>
                                </div>
                           <div class="row">
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.LastUpdatedDate)
                                    </dt>
                                    <dd class="col-sm-8">
                                        @Html.DisplayFor(model => model.LastUpdatedDate)
                                    </dd>
                                </div>
                                    <a asp-action="Create" asp-route-id="@Model?.UniqueId">Edit</a> |
                                    <a asp-action="Index">Back to List</a>                              
                            </div>
                            <div class="col-sm-1"></div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-2"></div>
</div>
