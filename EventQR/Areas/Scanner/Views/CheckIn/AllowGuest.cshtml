@model EventQR.Models.GuestCheckIn

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_TicketScannerLayout.cshtml";
    // ViewBag.activeTabName = "_TokenScannerLayout";

}

@await Html.PartialAsync("_eventPartial")
<div class="container">
    <div class="col-sm-12">
        <table class="table" border="1" id="tblGuestList">
            <thead>
                <tr>
                    <th>SubEventName</th>
                    <th>StartDateTime</th>
                    <th>EndDateTime</th>
                    <th> Allow CheckIn</th>
                </tr>
            </thead>
            <tbody>
                
                    @foreach (var subEvent in Model.Guest.SubEvents)
                    {
                        <tr>
                        <td>@subEvent.SubEventName</td>
                        <td>@subEvent.StartDateTime </td>
                        <td>@subEvent.EndDateTime</td>
                        <td> <input name="@subEvent.UniqueId" type="checkbox" /></td>
                        </tr>
                    }
                
            </tbody>
        </table>
    </div>
</div>


